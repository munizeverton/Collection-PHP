<phpunit bootstrap="../src/Collection/Test/bootstrap.php" colors="true"  stderr="true">
    <logging>
        <log type="coverage-html" target="../build/coverage"/>
        <log type="coverage-clover" target="../build/logs/clover.xml"/>
        <log type="coverage-crap4j" target="../build/logs/crap4j.xml"/>
        <log type="junit" target="../build/logs/junit.xml" logIncompleteSkipped="false"/>
    </logging>
    <testsuites>
        <testsuite name="Collection">
            <directory>../src/Collection/Test/Cases</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist >
            <file>../src/Collection/Collection.php</file>
            <file>../src/Collection/Util/Helpers.php</file>
            <file>../src/Collection/Util/Arr.php</file>
            <file>../src/Collection/Util/Macroable.php</file>
        </whitelist>
    </filter>   

</phpunit>